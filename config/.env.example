# ========================================
# MediVault Configuration
# ========================================

# ----------------------------------------
# Google Gemini Configuration (Required)
# ----------------------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
EMBEDDING_MODEL=text-embedding-004

# ----------------------------------------
# Supabase Configuration (Required)
# ----------------------------------------
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# ----------------------------------------
# Vector Database Configuration
# ----------------------------------------
VECTOR_DB_PATH=./data/chroma_db
VECTOR_DB_COLLECTION=medical_records

# ----------------------------------------
# Server Configuration
# ----------------------------------------
FLASK_PORT=5000
FRONTEND_PORT=5173
FLASK_DEBUG=False
FLASK_ENV=production

# ----------------------------------------
# Security Configuration
# ----------------------------------------
# Generate a secure random string: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ----------------------------------------
# File Upload Configuration
# ----------------------------------------
UPLOAD_FOLDER=./data/uploads
MAX_FILE_SIZE_MB=16
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff,bmp

# ----------------------------------------
# Storage Configuration
# ----------------------------------------
STORAGE_BUCKET_NAME=medical-records
USE_SUPABASE_STORAGE=True

# ----------------------------------------
# Logging Configuration
# ----------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./data/logs/medivault.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ----------------------------------------
# Agent Configuration
# ----------------------------------------
# Temperature settings for different agents
OCR_TEMPERATURE=0.1
NER_TEMPERATURE=0.2
PRESCRIPTION_TEMPERATURE=0.1
ANOMALY_TEMPERATURE=0.2
NORMALIZER_TEMPERATURE=0.1
SEARCH_TEMPERATURE=0.3
ANALYSER_TEMPERATURE=0.4

# Token limits
MAX_OUTPUT_TOKENS=8192

# Search configuration
DEFAULT_TOP_K=5
SEARCH_SEMANTIC_WEIGHT=0.6
SEARCH_KEYWORD_WEIGHT=0.3
SEARCH_RECENCY_WEIGHT=0.1

# ----------------------------------------
# Feature Flags
# ----------------------------------------
ENABLE_BATCH_PROCESSING=True
ENABLE_GPU_OCR=False
ENABLE_CACHING=False

# ----------------------------------------
# OCR Configuration
# ----------------------------------------
OCR_LANGUAGES=en,hi
OCR_GPU=False

# ----------------------------------------
# Redis Configuration (Optional)
# ----------------------------------------
# Uncomment to enable caching
# REDIS_URL=redis://localhost:6379/0
# REDIS_ENABLED=True
# REDIS_TTL=3600

# ----------------------------------------
# Email Configuration (Optional)
# ----------------------------------------
# For notifications and alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@medivault.com

# ----------------------------------------
# Monitoring (Optional)
# ----------------------------------------
# SENTRY_DSN=your-sentry-dsn
# ENABLE_MONITORING=False

# ----------------------------------------
# CORS Configuration
# ----------------------------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# ----------------------------------------
# Rate Limiting (Optional)
# ----------------------------------------
# RATELIMIT_ENABLED=False
# RATELIMIT_DEFAULT=100 per hour
# RATELIMIT_STORAGE_URL=redis://localhost:6379

# ----------------------------------------
# OpenAI Configuration (Legacy - Optional)
# ----------------------------------------
# Only needed if using OpenAI instead of Gemini
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MAX_TOKENS=1000
# OPENAI_TEMPERATURE=0.3
